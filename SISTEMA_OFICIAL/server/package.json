{
    "name": "rota-verde-server",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "node --loader ts-node/esm index.ts",
        "build": "tsc",
        "start": "NODE_ENV=production node dist/server/index.js",
        "db:push": "drizzle-kit push:pg",
        "db:studio": "drizzle-kit studio",
        "db:bootstrap": "node --loader ts-node/esm scripts/db/bootstrap.ts",
        "db:seed": "node --loader ts-node/esm scripts/db/seeds/seed-local.ts",
        "db:backup": "node --loader ts-node/esm scripts/db/backup-simple.ts",
        "db:migrate": "drizzle-kit push:pg"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "drizzle-orm": "^0.29.5",
        "drizzle-zod": "^0.5.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.5.1",
        "express-session": "^1.17.3",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.16.3",
        "postgres": "^3.4.7",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.17.10",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.4",
        "@types/pg": "^8.10.9",
        "drizzle-kit": "^0.20.6",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.3.3"
    }
